mixin post(t, text, msg)
  div.painel
    h1= t
    br
    small= msg
    div.bs-component
      div!= filters[0].render(text)

mixin form_for(action, method, forms)
  form.form-vertical(action=_action method=_method)
    each form in forms
      div.form-group
        label.control-label(for=form.name)
        - if(form.name === 'email' || form.name === 'password' || form.name === 'subject') 
          input.form-control(type="text" placeholder=form.placeholder name=form.name)
        - if(form.name === 'text' || form.name === 'message')
          textarea.form-control(type="text" placeholder=form.placeholder  name=form.name style="height:200px")
    button.btn.btn-primary(type="submit") enviar

mixin social_for(action, social)
  div.row
    each form in social
      div.col-md-1.col-sm-1
        a(class="btn btn-"+form href=action+"/"+form)
          i(aria-hidden="true" class="fa fa-"+form+" fa-2x")

mixin menu(action, name, list, sublist)
  div.col-xs-2.col-sm-3.sidebar-offcanvas#sidebar(role="navigation")
    div.page-title
      hr
      h2= name
      hr
    div.list-group.table-of-contents
      - for(var i in list)
        -var item = list[i]
        div.list-group-item
          - if(item.ref)
            - var _l = action+"="+name+"&ref="+item.ref
            a(href=_l)
              - if(item.title)
                bold= item.title
              - if(item.name)
                bold= item.name
              - if(item.username)
                bold= item.username
          - else
            - var _l = action+"="+name+"&ref=about"
            a(href=_l)
              - if(item.title)
                bold= item.title
              - if(item.name)
                bold= item.name
              - if(item.username)
                bold= item.username
    div.list-group.table-of-contents 
      p #{name} Index
      - for(var i in sublist)
        -var item = sublist[i]
        div.list-group-item
          - if(item.ref)
            - var _l = action+"="+name+"&ref="+item.ref
            a(href=_l)
              - if(item.title)
                bold= item.title
              - if(item.name)
                bold= item.name
              - if(item.username)
                bold= item.username
          - else
            - var _l = action+"="+name+"&ref=about"
            a(href=_l)
              - if(item.title)
                bold= item.title
              - if(item.name)
                bold= item.name
              - if(item.username)
